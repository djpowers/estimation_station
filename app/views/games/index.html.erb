<div class="row">
  <div class="small-6 small-centered columns">
    <%= link_to 'Create New Game', new_game_path %>

    <table>
      <thead>
        <tr>
          <th>Games</th>
        </tr>
      </thead>

      <tbody>
        <% @games.each do |game| %>
          <tr id=<%= "game_#{game.id}" %>>
            <td><%= game.title %></td>
            <td><%= link_to 'Show', game_path(game) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
